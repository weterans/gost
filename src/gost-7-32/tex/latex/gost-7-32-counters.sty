%
% Values for capital russian letters counter
%
\makeatletter
\newcommand\AlphRus[1]{%
  \expandafter \@AlphRus \csname c@#1\endcsname
}

\newcommand\@AlphRus[1]{%
  \ifcase #1%
  \or А\or Б\or В\or Г\or Д\or Е\or Ж\or И\or К\or 
    Л\or М\or Н\or П\or Р\or С\or Т\or У\or Ф\or 
    Х\or Ц\or Ш\or Щ\or Э\or Ю\or Я%
  \else \@ctrerr
\fi
}
\makeatother

