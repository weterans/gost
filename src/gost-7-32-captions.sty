\ProvidesPackage{gost-7-32-captions}[2022/01/28 GOST 7.32-2017]

\RequirePackage{caption}

%
% Table caption aligned to the left with dash as a separator
%
\captionsetup[table]{labelsep=endash, skip=0pt, singlelinecheck=off}

%
% Dash as separator in figure caption and centering
%
\captionsetup[figure]{labelsep=endash, justification=centering}
